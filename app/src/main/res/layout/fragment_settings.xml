<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_header_curve"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Placeholder for the Illustration -->
    <!-- Ideally this would be an ImageView with the illustration resource -->
    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-25dp"
        android:src="@drawable/ic_header_puzzle"
        app:srcCompat="@drawable/ic_header_puzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Accessibility Section -->
            <TextView
                android:id="@+id/tv_accessibility_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="@string/accessibility_title"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@color/purple_accent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_accessibility_title"
                app:layout_constraintEnd_toStartOf="@+id/tv_accessibility_title"
                app:layout_constraintTop_toTopOf="@+id/tv_accessibility_title"/>

            <TextView
                android:id="@+id/tv_accessibility_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="@string/accessibility_subtitle"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_accessibility_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_accessibility_title" />

            <!-- Options Row -->
            <LinearLayout
                android:id="@+id/layout_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_accessibility_subtitle">

                <!-- Language Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#5C6BC0"> <!-- Blueish color -->
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#6A61FB"
                        android:orientation="vertical">
                         <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_sort_alphabetically" 
                            app:tint="@color/white"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/language_bengali"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Theme Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#6B62FD"> <!-- Light Blueish color -->
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_label"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:layout_marginStart="12dp"/>
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/bg_white_rounded" 
                            android:backgroundTint="@color/white"
                            android:padding="4dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <!-- Would use ToggleButton or custom view, simulating here -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_view" 
                                app:tint="@color/colorPrimary"
                                android:background="@drawable/ic_launcher_background"
                                android:padding="4dp"/> <!-- Moon sim -->
                                
                             <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="8dp"
                                android:src="@android:drawable/btn_star_big_on" 
                                app:tint="@color/orange"
                                android:padding="4dp"/> <!-- Sun sim -->

                        </LinearLayout>
                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:gravity="center"
                             android:layout_marginTop="4dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="@string/theme_dark"
                                 android:textSize="10sp"
                                 android:layout_marginEnd="16dp"
                                 android:textColor="@color/black"/>
                                 
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="@string/theme_light"
                                 android:textSize="10sp"
                                 android:textColor="@color/black"/>
                         </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_text_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:text="@string/text_size"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_options" />

            <!-- Text Size Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8EAF6"
                app:layout_constraintTop_toBottomOf="@+id/tv_text_size_label">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#6960F9"
                    android:padding="16dp">
                    
                    <FrameLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_horizontal"
                         android:background="@color/white"
                         android:padding="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medium"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                    </FrameLayout>

                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:progress="50"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aa"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>
                        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aa"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>
                         <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                          <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aa"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Permissions Section -->
             <TextView
                android:id="@+id/tv_permissions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="@string/permissions_title"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_text_size" />

            <View
                android:layout_width="4dp"
                android:layout_height="0dp"
                android:background="@color/purple_accent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_permissions_title"
                app:layout_constraintEnd_toStartOf="@+id/tv_permissions_title"
                app:layout_constraintTop_toTopOf="@+id/tv_permissions_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_gradient_blue"

                android:backgroundTint="#685FF7"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_permissions_title">

                <!-- Display Overlay -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                         <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/display_overlay"
                                android:textColor="#2979FF"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvOverlayStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_missing"
                                android:textColor="#2979FF"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnOverlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_grant"
                            android:textSize="20dp"
                            android:background="@drawable/bg_button_grant"
                            android:textColor="#D32F2F"
                            app:backgroundTint="@null"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Screen Scanner -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="12dp">
                         <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/screen_scanner"
                                android:textColor="#2979FF"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/tvAccessibilityStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/status_inactive"
                                android:textColor="#2979FF"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnAccessibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_grant"
                            android:textSize="20dp"
                            android:background="@drawable/bg_button_grant"
                            android:textColor="#D32F2F"
                            app:backgroundTint="@null"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>