<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050000"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.1"
        android:text="SHOTTYO // BONDHU"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="ANTI-MISINFORMATION PROTOCOL"
        android:textColor="#884444"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cyberpunk_alert"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM STATUS"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSystemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:shadowColor="#FF0000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:text="OFFLINE"
            android:textColor="#FF4444"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="> REQUIRED PERMISSIONS"
        android:textColor="#FF0000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_cyberpunk_card"
        android:gravity="center_vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISPLAY OVERLAY"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOverlayStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ MISSING ]"
                android:textColor="#FF4444"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnOverlay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_cyberpunk_button"
            android:text="GRANT"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cyberpunk_card"
        android:gravity="center_vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCREEN SCANNER"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAccessibilityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ INACTIVE ]"
                android:textColor="#FF4444"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAccessibility"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_cyberpunk_button"
            android:text="ENABLE"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>