<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cyberpunk_alert"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Top Label: SYSTEM_OVERRIDE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:letterSpacing="0.15"
        android:text="SYSTEM_OVERRIDE // DETECTED"
        android:textColor="#FF4444"
        android:textSize="10sp"
        android:textStyle="bold" />

    <!-- Main Title: FAKE NEWS -->
    <TextView
        android:id="@+id/tvAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:shadowColor="#FF0000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:text="FAKE NEWS"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Description Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Algorithms indicate high probability of misinformation in the detected statement."
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <!-- Horizontal Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="#44FF0000" />

    <!-- Dismiss Button -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_cyberpunk_button"
        android:text="[ DISMISS ALERT ]"
        android:textColor="#FF8888"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>