<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg_header_curve"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Placeholder for the Illustration -->
    <!-- Ideally this would be an ImageView with the illustration resource -->
    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-25dp"
        android:src="@drawable/ic_header_puzzle"
        app:srcCompat="@drawable/ic_header_puzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Content Section -->
    <TextView
        android:id="@+id/tv_check_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:text="@string/check_news_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_bg" />
        
    <View
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/purple_accent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_check_news_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_check_news_title"
        app:layout_constraintTop_toTopOf="@+id/tv_check_news_title"/>

    <TextView
        android:id="@+id/tv_check_news_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/check_news_subtitle"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_check_news_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_news_title" />

    <!-- Scan Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_scan"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_news_subtitle">

        <!-- Gradient Background Simulation or actual drawable usage -->
        <!-- Doing a simple gradient via XML would be better, but using blue color for now -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6B62FD">

            <!-- Simple Camera Icon Placeholder -->
             <ImageView
                android:id="@+id/iv_camera_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="@string/scan_image_title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_scan_subtitle"
                app:layout_constraintStart_toEndOf="@+id/iv_camera_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_scan_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/scan_image_subtitle"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_camera_icon"
                app:layout_constraintTop_toBottomOf="@+id/iv_camera_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/or_divider"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_scan" />

    <!-- URL Input Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_link_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#6B62FD"
        app:layout_constraintTop_toBottomOf="@+id/tv_or">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <!-- Input Field Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">
                    
                     <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        app:tint="#6A61FB" />

                    <EditText
                        android:id="@+id/et_url_input"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Paste URL here"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:paddingStart="12dp"
                        android:inputType="textUri" />
                        
                     <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#6C63FF"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Verify Button -->
            <Button
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text="@string/btn_verify"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/bg_button_verify"
                app:backgroundTint="@null"
                android:paddingHorizontal="32dp"
                android:paddingVertical="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/articles_checked_count"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_link_check" />

</androidx.constraintlayout.widget.ConstraintLayout>